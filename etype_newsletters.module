<?php

/**
 * @return array
 */
function etype_newsletters_action_info() {
  return array(
    'etype_newsletters_add_node' => array(
        'type' => 'node',
        'label' => t('Add node to newsletter'),
        'configurable' => FALSE,
      ),
    );
  }

/**
 * @param $node
 */
function etype_newsletters_add_node($node) {
  $nid = db_insert('etype_newsletters')
    ->fields(array(
      'nid' => $node->nid,
    ))
    ->execute();
}