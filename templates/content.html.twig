{% extends "base.html.twig" %}

{% block content %}
    {% for item in items %}
        <tr>
        <td valign="top" class="specbundle">
            <table width="100%" border="0" cellspacing="0"
                   cellpadding="0">
                <tbody>
                <tr>
                    <td valign="top" width="255">
                        <table width="100%" border="0"
                               cellspacing="0" cellpadding="0"
                               align="center">
                            <tr>
                                <td valign='top'>
                                    <div class="contentEditableContainer contentTextEditable">
                                        <div class="contentEditable">
                                            <img src="{{ item.image_src }}" width="100%" style="width:100%; border:0;
                                            margin:0;">
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td valign='top'>
                                    <div class="contentEditableContainer contentTextEditable">
                                        <div class="contentEditable">
                                            <h2>{{ item.title }}</h2>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td valign='top'
                                    style='padding-right:30px;'>
                                    <div class="contentEditableContainer contentTextEditable">
                                        <div class="contentEditable">
                                            {{ item.body|raw }}
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td valign='top'
                                    style='padding-bottom:15px;'>
                                    <div class="contentEditableContainer contentTextEditable">
                                        <div class="contentEditable">
                                            <a target='_blank'
                                               href="{{ item.url }}"
                                               style='padding:8px 10px;color:#ffffff;font-size:13px;background:#698EC3;text-decoration:none; border-radius:3px;-moz-border-radius:3px;-webkit-border-radius:3px'>Read the story â†’</a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
                </tbody>
            </table>
        </td>
        </tr>
    {% endfor %}
{% endblock %}